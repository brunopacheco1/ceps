<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="ceps">
		<jta-data-source>java:/cepsDS</jta-data-source>

		<class>com.dev.bruno.ceps.model.Cep</class>
		<class>com.dev.bruno.ceps.model.CepBairro</class>
		<class>com.dev.bruno.ceps.model.CepLocalidade</class>
		<class>com.dev.bruno.ceps.model.CepLogradouro</class>
		<class>com.dev.bruno.ceps.model.CepTipoLogradouro</class>
		<class>com.dev.bruno.ceps.model.CepUF</class>
		
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="jboss.entity.manager.factory.jndi.name" value="java:/cepsEntityManagerFactory"/>
		</properties>
	</persistence-unit>
</persistence>